@model IEnumerable<Xz.Models.Book>

<h1 class="mb-4">📚 Список книг</h1>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill">
        ➕ Додати книгу
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Немає доступних книг. Будь ласка, додайте нову книгу.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Назва</th>
                <th>Автор</th>
                <th>Рік</th>
                <th>Жанр</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Year</td>
                    <td>@book.Genre</td>
                </tr>
            }
        </tbody>
    </table>
}