@model Xz.Models.Book

<h1>Додати книгу</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Назва:</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Автор:</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Жанр:</label>
        <input asp-for="Genre" />
    </div>
    <div>
        <label>Видавництво:</label>
        <input asp-for="Publisher" />
    </div>
    <div>
        <label>Рік:</label>
        <input asp-for="Year" type="number" />
    </div>
    <button type="submit">Додати</button>
</form>
